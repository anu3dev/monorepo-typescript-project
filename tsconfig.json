{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ems/ui": ["packages/ui/src"],
      "@ems/api": ["packages/api/src"],
      "@ems/types": ["packages/types/src"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["apps", "packages"]
}
